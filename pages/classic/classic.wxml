<view class="container">
  <view class="header">
    <n-episode class="episode" index="{{classic.index}}"></n-episode>
    <n-like class="like" bind:like="onLike" like="{{classic.like_status}}" count="{{classic.fav_nums}}"></n-like>
  </view>
  <n-movie img="{{classic.image}}" content="{{classic.content}}"></n-movie>
  <n-navi class="navi" latest="{{latest}}" first="{{first}}" catch:left="onNext" catch:right="onPrevious"
          title="{{classic.title}}"></n-navi>
</view>
