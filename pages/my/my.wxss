.container {
  display: flex;
  align-items: center;
  flex-direction: column;
}

.bg {
  width: 750rpx;
  height: 574rpx;
}

.avatar-position {
  position: absolute;
  top: 255rpx;
}

.avatar-container {
  display: flex;
  align-items: center;
  flex-direction: column;
}

.avatar {
  overflow: hidden;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.about-container {
  position: absolute;
  top: 440rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 550rpx;
  padding: 0 100rpx;
}

.about-container > view:nth-child(2) {
  margin-top: -5rpx;
}

.about-us {
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: space-between;
}

.about-us image {
  width: 34rpx;
  height: 34rpx;
}

.preview-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  width: 690rpx;
  margin-top: 30rpx;
  padding: 0 30rpx;
}

.book-num {
  font-size: 36rpx;
  color: #000000;
}

.description {
  font-size: 24rpx;
  color: #999999;
}

.like-container {
  display: flex;
  align-items: center;
  flex-direction: column;
  margin-top: -13rpx;
  background-color: #f5f5f5;
}

.headline {
  width: 97rpx;
  height: 42rpx;
  margin-top: 30rpx;
}

.preview {
  margin-bottom: 30rpx;
}
