.container {
  display: flex;
  align-items: center;
  flex-direction: column;
  width: 100%;
}

.header {
  position: fixed;
  z-index: 99;
  display: flex;
  align-items: center;
  flex-direction: row;
  width: 750rpx;
  height: 100rpx;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  background-color: #ffffff;
}

.search-container {
  display: inline-flex;
  align-items: center;
  flex: 1;
  flex-direction: row;
  margin-left: 20rpx;
  border-radius: 50px;
  background-color: #f5f5f5;
}

.icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 16rpx;
  margin-left: 24rpx;
}

.bar {
  font-size: 28rpx;
  display: inline-block;
  flex: 1;
  height: 68rpx;
  border-top-right-radius: 15px;
  border-bottom-right-radius: 15px;
}

.in-bar {
  color: #999;
}

.cancel-img {
  width: 28rpx;
  height: 28rpx;
  padding: 20rpx;
}


.cancel {
  line-height: 68rpx;
  display: inline-block;
  width: 120rpx;
  text-align: center;
}

.history {
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  width: 690rpx;
  margin: 40rpx 0 20rpx 0;
  margin-top: 160rpx;
}

.hot-search {
  margin-top: 70rpx;
}

.title {
  line-height: 30rpx;
  display: flex;
  align-items: center;
  flex-direction: row;
}

.chunk {
  display: inline-block;
  width: 10rpx;
  height: 30rpx;
  margin-right: 20rpx;
  background-color: #000;
}

.tags {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 630rpx;
  margin-top: 24rpx;
  padding-left: 30rpx;
}

.tags n-tag {
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.books-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  width: 570rpx;
  margin-top: 100rpx;
  padding: 0 90rpx 0 90rpx;
}

.books-container n-book {
  margin-bottom: 25rpx;
}

.loading {
  margin: 50rpx 0;
}

.loading-center {
  position: absolute;
  top: 50%;
  left: 50%;
}

.empty-tip {
  position: absolute;
  top: 50%;
  display: inline-block;
  width: 100%;
  text-align: center;
}
